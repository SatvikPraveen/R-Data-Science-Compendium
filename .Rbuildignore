^Dockerfile$
^docker-compose\.yml$
^\.dockerignore$

# Package Development
^cran-comments\.md$
^CRAN-RELEASE$
^revdep$
^pkgdown$
^_pkgdown\.yml$
^docs$

# Environment Management
^renv$
^renv\.lock$
^\.Rprofile$
^\.Renviron$

# Data Directories (exclude from package)
^data/raw$
^data/external$
^data/temp$
^data/processed$

# Output Directories
^output$
^results$
^reports$
^plots$
^figures$
^cache$

